<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <EditText
        android:id="@+id/newPassConf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/newPass"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/newPass"
        android:ems="10"
        android:hint="Confirm Password"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/newEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/newUsername"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/newPassConf"
        android:ems="10"
        android:hint="Email Address"
        android:inputType="textEmailAddress" />

    <Button
        android:id="@+id/signUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignRight="@+id/newEmail"
        android:layout_below="@+id/newEmail"
        android:text="Sign Up" />

    <TextView
        android:id="@+id/signUpErrorText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#FF0000" />

    <ProgressBar
        android:id="@+id/signupload"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/newEmail"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/newPass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/newUsername"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/newUsername"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/newUsername"
        android:layout_alignBottom="@+id/newUsername"
        android:layout_alignParentLeft="true"
        android:text="Username:" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/newPass"
        android:layout_alignBottom="@+id/newPass"
        android:layout_alignParentLeft="true"
        android:text="Password:" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/newPassConf"
        android:layout_alignBottom="@+id/newPassConf"
        android:layout_alignParentLeft="true"
        android:text="Confirm Pass:" />

    <TextView
        android:id="@+id/errorText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/newEmail"
        android:layout_alignBottom="@+id/newEmail"
        android:layout_alignParentLeft="true"
        android:text="Email address:" />

    <EditText
        android:id="@+id/newUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/signUpErrorText"
        android:ems="10"
        android:hint="Desired Username" />

</RelativeLayout>